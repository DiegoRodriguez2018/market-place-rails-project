<div class="bg4">

</div>
<%= render "layouts/nav" %>
<h3 class="text" data-text="My orders"> My Orders </h3>
<p>
  <% if @orders.size != 0 %>
    <table class="table-striped">
      <thead>
        <tr>
          <th>Timezone</th>
          <th>Date</th>
          <th>Time</th>
          <th>Product title</th>
          <th>Product price</th>
          <th>Quantity</th>
          <th>Total Price</th>
          <th>Shipping address</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <% total_price = order.product_price.to_i*order.quantity.to_i%>
            <td><%= order.created_at.localtime.strftime('UTC%:z') %></td>
            <td><%= order.created_at.localtime.strftime('%d-%m-%Y') %></td>
            <td><%= order.created_at.localtime.strftime('%H:%M') %></td>
            <td><%= order.product_title %></td>
            <td><%= number_to_currency(order.product_price.to_i/100.0) %></td>
            <td><%= order.quantity %></td>
            <td><%= number_to_currency(total_price.to_i/100.0) %></td>
            <td><%= order.shipping_address %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</p>
