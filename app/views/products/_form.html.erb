<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="text">
    <%= form.label :title %><br/>
    <%= form.text_field :title %>
  </div>

  <div class="text">
    <%= form.label :price %><br/>
    <%= form.text_field :price, value: number_with_precision((product.price||0)/100.0, :precision => 2) %>
  </div>

  <div class="text">
    <%= form.label :description %><br/>
    <%= form.text_area :description %>
  </div>

  <div class="text">
    <%= form.label :stock %><br/>
    <%= form.number_field :stock %>
  </div>

  <div class="text">
    <%= form.label :category %><br/>
    <%= select_tag(:category, options_for_select(@select_options,@select_options.length)) %>
  </div>

  <div class="text">
    <%= form.label :image %><br/>
    <%= form.file_field :image %>
  </div>

  <div class="btn-1">
    <%= form.submit %>
  </div>

<% end %>
