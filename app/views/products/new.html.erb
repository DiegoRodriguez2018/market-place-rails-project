<p id="notice"><%= notice %></p>

<h1>List your item!</h1>

<%= render 'form', product: @product %>

<hr>

<% if @listed_products.length>0 %>

<h1>Items previously listed:</h1>
<table class="table">

<thead>
<tr>
    <th>Preview</th>
    <th>Title </th>
    <th>Price</th>
    <th>Description</th>
    <th colspan="3"></th>
</tr>
</thead>

<% @listed_products.each do |product| %>
    <tr>
     <td> <%= link_to image_tag(product.image, width: '100'), product_path(product) %> 
     </td>
         <td> <%=link_to product.title , product_path(product)%> </td>
         <td> <%= number_to_currency(product.price/100.0) %> </td>
         <td> <%= product.description %> </td>
       
       <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>

    </tr>
<% end %>
</table>

<% end %>