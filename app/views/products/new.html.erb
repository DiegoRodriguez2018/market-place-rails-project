<div class="bg4">
  </div>
    <p id="notice"><%= notice %></p>
      <div class="product-form-styles">
        <br/>

        <div class="subtext"> Scroll down to manage your previous items. </div>
        <br/>
        <hr/>
        <h1 class="glitch-small" data-text="SELL">SELL</h1>
        <%= render 'form', product: @product %>
        <br>
      </div>
      <div class="orders-styles" >
        <hr> 
        <h3 class="glitch-small" data-text="Your previous items:"> Your previous items: </h3>
        <table>
          <thead>
            <tr>
              <th>Created at</th>
              <th>Modified at</th>
              <th>Product Title</th>
              <th>Price</th>
              <th>Stock</th>
              <th>Category Name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @listed_products.each do |product| %>
              <tr>
                <td><%= product.created_at %></td>
                <td><%= product.updated_at %></td>
                <td><%= product.title %></td>
                <td><%= product.price %></td>
                <td><%= product.stock %></td>
                <td><%= product.category.name %></td>
                <td><%= link_to 'Show', product %></td>
                <td><%= link_to 'Edit', edit_product_path(product) %></td>
                <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
  </div>
</div>
