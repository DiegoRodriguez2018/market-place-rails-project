<!DOCTYPE html>
<html>
  <head>
    <title>MarketplaceProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav>
      <% if user_signed_in? %>
        <p> Welcome, <%= current_user.email %>  | 
        <%= link_to('Logout', destroy_user_session_path, method: :delete) %> 
        </p>
        <hr>
      <% end %>
      <%= link_to "Home", root_path , class: "btn-info btn-lg" %> 
      <%= link_to "Sell", new_product_path, class: "btn-info btn-lg" %>
      <%= link_to "Buy", products_path, class: "btn-info btn-lg" %>
      <%= link_to "About", about_path, class: "btn-info btn-lg" %>
      <%= link_to "Contact", contact_path, class: "btn-info btn-lg" %>

    </nav>
    <hr>
    <%= yield %>
  </body>
</html>
